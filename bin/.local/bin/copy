#!/bin/bash

# stdin
INPUT=$(cat)

OS=$(uname -s)

case "$OS" in
"Darwin")
    printf "%s" "$INPUT" | pbcopy
    ;;
"Linux")
    printf "%s" "$INPUT" | wl-copy
    ;;
*)
    echo "Unknown OS: $OS"
    ;;
esac

