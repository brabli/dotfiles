#!/bin/bash

show_help_if_requested() {
    if [ "$1" = "--help" ] || [ "$1" = "-h" ]; then
        echo "Usage: ${0##*/} [options]"
        echo ""
        echo "My IP - Retrieve your current IP address and copy it to the clipboard."
        echo ""
        echo "Options:"
        echo "    -h, --help       Display this help message."
        echo "    -t [number]      Set timeout in seconds, default it 1."
        echo "    -s               Silence output showing ip address."
        echo "    -l               (Loud!) Verbose output."
        exit 0
    fi
}

show_help_if_requested $1;

TIMEOUT="1";
SILENCE="false"
VERBOSE="false"

while getopts ":st:l" opt; do
    case $opt in
        t)
            TIMEOUT="$OPTARG" ;;

        s)
            SILENCE="true" ;;

        l)
            VERBOSE="true" ;;

        \?)
            echo "Invalid option: -$OPTARG" >&2
            exit 1 ;;

        :)
            echo "Option -$OPTARG requires an argument." >&2
            exit 1 ;;
    esac
done

if [ "true" == "$VERBOSE" ]; then
    echo "Timeout is set to $TIMEOUT.";
fi

IP=$(curl --connect-timeout $TIMEOUT -s ifconfig.me/ip)

if [ ! $IP ]; then
    echo 'Failed to fetch IP address.' >&2
    exit 1
fi

if [ $SILENCE != "true" ]; then
    echo "Current IP address: $IP"
fi

# if [ which pbcopy ]; then
#     echo -n $IP | pbcopy;
# elif [ which xclilp ]; then
#     echo -n $IP | xclip -sel clip
# fi

